<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:top="-5dp" android:left="-5dp" android:right="-5dp" android:bottom="2dp">
                <shape>
                    <solid android:color="@color/colorWhite"/>
                    <stroke android:color="@color/colorOrange" android:width="2dp"/>
                    <padding
                        android:bottom="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:top="-3dp" android:left="-5dp" android:right="-5dp" android:bottom="2dp">
                <shape >
                    <solid android:color="@color/colorWhite"/>
                    <stroke android:color="@color/colorWhite" android:width="2dp"/>
                    <padding
                        android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>