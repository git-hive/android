<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardScroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:scrollbars="none"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:clipToPadding="false"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:elevation="30dp"
    android:orientation="vertical">

        <!-- content header line -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <RelativeLayout
                    android:paddingBottom="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/topCardIV"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:background="@drawable/city_login" />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleContentTV"/>
                </RelativeLayout>

                <LinearLayout
                        android:paddingRight="20dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:paddingRight="20dp"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="left|bottom"
                                    app:srcCompat="@drawable/ic_icones_support_orange"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_gravity="right|center"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:text="@string/zeroin3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/budgetTotalAppliedTV"/>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                                <ImageView
                                    app:srcCompat="@drawable/ic_icones_clock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/timerTV"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:layout_gravity="right|center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />


                        </LinearLayout>

                </LinearLayout>

        </FrameLayout>



        <!-- content body layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgContent"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="9dp">

                <!-- avatar and name part -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <TextView
                            android:paddingTop="5dp"
                            android:gravity="center"
                            android:id="@+id/content_avatar_title"
                            style="@style/ContentMainBadgeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/suggested" />

                        <ImageView
                            android:layout_marginLeft="35dp"
                            android:id="@+id/suggestedByIV"
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@id/content_avatar_title"
                            android:layout_height="35dp"
                            app:srcCompat="@drawable/ic_profile_photo" />

                        <TextView
                            android:paddingTop="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/suggestedByTV"


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignTop="@id/suggestedByIV"
                            android:layout_toEndOf="@id/suggestedByIV"
                            android:layout_toRightOf="@id/suggestedByIV"
                            android:textColor="@color/mainTextColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                </RelativeLayout>

                <!-- divider line -->
                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_marginBottom="6dp"-->
                    <!--android:layout_marginTop="9dp"-->
                    <!--android:src="@color/contentDividerLine" />-->


                <!-- divider line -->
                <TextView
                    android:paddingTop="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/contentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/suggestedByIV"
                    android:text="@string/lore_ipsun"
                    android:textColor="@color/mainTextColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:paddingTop="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/partialResultsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/suggestedByIV"
                    android:text="@string/partial_results"
                    android:textSize="16sp"
                    android:textStyle="italic" />

             <!--<LinearLayout-->
                 <!--android:layout_gravity="center_horizontal"-->
                 <!--android:gravity="center"-->
                 <!--android:layout_width="wrap_content"-->
                 <!--android:layout_height="wrap_content">-->
                     <!--&lt;!&ndash; hexagonal graph&ndash;&gt;-->
                     <!--<com.hive.hive.utils.hexagonsPercentBar.HexagonView-->
                         <!--android:layout_marginLeft="30dp"-->
                         <!--android:layout_gravity="center_horizontal"-->
                         <!--android:id="@+id/percentageBar"-->
                         <!--android:layout_width="wrap_content"-->
                         <!--android:layout_height="100dp"-->

                         <!--/>-->

             <!--</LinearLayout>-->


            <!-- Question Options -->


            <ExpandableListView
                android:id="@+id/questionExpandableLV"
                android:gravity="left"
                android:layoutDirection="ltr"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <!-- Vote button -->
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_gravity="center_horizontal|bottom"
                        android:id="@+id/choseVoteBT"
                        android:background="@drawable/ic_icones_double_like_orange"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        />
                    <TextView
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:text="@string/vote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>