<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:paddingLeft="22dp"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:orientation="vertical"
    tools:context="com.hive.hive.LoginActivity">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="25dp"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/hi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView

                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:layout_gravity="left"
                    android:text="@string/my_name_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText

                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:hint="@string/h_name"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#000000"
                    android:paddingBottom="3dp"
                    android:layout_gravity="bottom"
                    android:textSize="22sp"
                    android:text="@string/born"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:textColor="#000000"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="22sp"
                    android:hint="@string/h_ddmmaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingBottom="3dp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:textSize="22sp"
                    android:text="@string/my_cpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:hint="@string/h_cpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingBottom="3dp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:textSize="22sp"
                    android:text="@string/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:hint="@string/h_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:text="@string/my_password_be"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:hint="@string/password"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:hint="@string/h_password_conf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="bottom"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:text="@string/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/mCompleteSignUp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/colorOrange"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:text="@string/ready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

