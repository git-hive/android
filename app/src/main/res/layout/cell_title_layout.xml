<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgContent"
    app:cardElevation="4dp"
    android:shadowDx="0"
    android:shadowDy="30"
    android:shadowColor="#000"
    android:orientation="horizontal">

    <!-- LEFT TITLE PART -->
    <RelativeLayout
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:foregroundGravity="center"
            android:background="@color/colorOrange"
            android:text="@string/assembleia"
            android:id="@+id/category_IV"
            android:layout_width="90dp"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    <!-- RIGHT TITLE PART -->
    <LinearLayout
        android:layout_marginLeft="100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTV"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/ic_support_filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <TextView

                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:text="@string/zeroin3"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/budgetTotalAppliedTV"/>


        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/ic_icones_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/timeTV"
                android:textSize="14sp"
                android:gravity="left"
                android:text="@string/fake_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>