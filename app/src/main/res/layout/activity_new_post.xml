<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hive.hive.feed.NewPostActivity">



<android.support.v7.widget.Toolbar
    android:id="@+id/newRequestTB"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="start"
    app:theme="@style/CustomActionBar"
    app:titleTextColor="@color/colorOrange"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="45dp"
            android:gravity="center"
            android:text="@string/new_request_activity_title"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/toolbar_title_font_size" />

        <View
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="22.5dp"
            android:background="@color/colorOrange" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>

<include layout="@layout/content_new_post" />

</android.support.design.widget.CoordinatorLayout>