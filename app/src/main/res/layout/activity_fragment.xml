<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context="com.hive.hive.association.request.RequestActivity">
    <ImageView
        android:id="@+id/menuLeftArrowIV"
        app:srcCompat="@drawable/ic_left_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <android.support.v7.widget.RecyclerView
        android:layout_toRightOf="@id/menuLeftArrowIV"
        android:layout_alignBaseline="@id/menuLeftArrowIV"
        android:paddingBottom="-100dp"
        android:layout_gravity="top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:scrollbars="horizontal"
        android:id="@+id/recycler"
        android:layout_width="270dp"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_toRightOf="@id/recycler"
        android:background="@drawable/ic_right_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>
