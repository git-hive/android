<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="20dp"
    tools:context="com.hive.hive.association.request.NewRequestActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/titleET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/request_title_label"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/locationET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/request_location_label"
            android:inputType="textPersonName" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/descriptionET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/request_description_label"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>



    <!-- Categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- Categories Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Category 1 -->
            <ImageView
                android:id="@+id/cat1IV"
                android:layout_width="@dimen/new_request_category_icon_size"
                android:layout_height="@dimen/new_request_category_icon_size"
                app:srcCompat="@drawable/ic_category_security_disabled"
                android:layout_marginEnd="30dp"
                android:onClick="onCheckboxClicked" />

            <CheckBox
                android:id="@+id/cat1CB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <!-- Category 2 -->
            <ImageView
                android:id="@+id/cat2IV"
                android:layout_width="@dimen/new_request_category_icon_size"
                android:layout_height="@dimen/new_request_category_icon_size"
                app:srcCompat="@drawable/ic_category_gardening_disabled"
                android:layout_marginEnd="30dp"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cat2CB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <!-- Category 3 -->
            <ImageView
                android:id="@+id/cat3IV"
                android:layout_width="@dimen/new_request_category_icon_size"
                android:layout_height="@dimen/new_request_category_icon_size"
                app:srcCompat="@drawable/ic_category_services_disabled"
                android:onClick="onCheckboxClicked" />

            <CheckBox
                android:id="@+id/cat3CB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Categories Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Category 4 -->
            <ImageView
                android:id="@+id/cat4IV"
                android:layout_width="@dimen/new_request_category_icon_size"
                android:layout_height="@dimen/new_request_category_icon_size"
                app:srcCompat="@drawable/ic_category_security_disabled"
                android:layout_marginEnd="30dp"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cat4CB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!-- Category 5 -->
            <ImageView
                android:id="@+id/cat5IV"
                android:layout_width="@dimen/new_request_category_icon_size"
                android:layout_height="@dimen/new_request_category_icon_size"
                app:srcCompat="@drawable/ic_category_gardening_disabled"
                android:layout_marginEnd="30dp"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cat5CB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!-- Category 6 -->

            <ImageView
                android:id="@+id/cat6IV"
                android:layout_width="@dimen/new_request_category_icon_size"
                android:layout_height="@dimen/new_request_category_icon_size"
                app:srcCompat="@drawable/ic_category_services_disabled"
                android:onClick="onCheckboxClicked" />
            
            <CheckBox
                android:id="@+id/cat6CB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/saveBT"
        android:background="@color/colorOrange"
        android:textColor="@color/colorWhite"
        android:padding="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save" />

</LinearLayout>
